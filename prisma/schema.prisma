generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id        Int        @id @default(autoincrement())
  name      String
  semesters Semester[]  
}

model Semester {
 courseId  Int
  name      String
  course    Course   @relation(fields: [courseId], references: [id])
  subjects  Subject[]
  @@id([name, courseId])
}

model Subject {
  courseId     Int
  semesterName String
  name         String
  semester     Semester @relation(fields: [semesterName, courseId], references: [name, courseId])
  subDetails   SubDetail[]
  @@id([name, semesterName, courseId])
}


model SubDetail {
  courseId     Int
  subjectName  SubjectName
  semesterName String
  note         String
  year         Year[]
  qn           String
  subject Subject @relation(fields: [subjectName, semesterName, courseId], references: [name, semesterName, courseId])
  @@id([courseId, semesterName, subjectName, year, qn])
}





